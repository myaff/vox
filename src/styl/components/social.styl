.social {

	flexy(center, center, row, wrap);

	&.article-footer {
		justify-content: flex-start;
		background: $primary;
		color: $white;
		padding: 1.5rem 30px;
		padding-left: 120px;
		margin-left: -30px;
		max-width: 520px;

		@media $smWidth {
			padding: 4.5vw 6.25vw;
			padding-left: 13vw;
			margin-left: -6.25vw;
			max-width: 80vw;
		}
	}
	
	&--inline {
		flex-wrap: nowrap;
	}
	
	&__link {
		display: block;
		font-size: 2.5rem;
		line-height: 1;
		color: black;
		transition: color 0.2s;
		margin-left: 2.5rem;
		
		{hover-focus-active} {
			color: black;
			text-decoration: none;
		}
	}
	
	&__text {
		display: none;
	}
	
	&__text,
	&__icon {
		vertical-align: middle;
	}
	&__icon {
		padding: 0.325rem;
	}
	
	&__title {
		width: 100%;
		flex: 0 0 100%;
		font: bold 18px/1 $font-util;
		text-align: center;
		margin: 0 0 1.5rem;

		@media $smWidth {
			font-size: 3vw;
		}
	}
	&--inline &__title {
		width: auto;
		flex: 0 1 auto;
		text-align: left;
		margin: 0 2rem 0 0;
	}
	
	&__delimiter {
		display: none;
	}
	
}
.ya-share2 {

	&__list {
		padding: 0;
		margin: 0;
		flexy(flex-start, center, row, nowrap);
	}
	
	&__item {
		display: block;
		margin: 0;

		& + & {
			margin-left: 5.5vmin;

			.article-footer & {
				margin-left: 1rem;
			}
		}
	}
	&__link {
		display: block;
		size(1em);
		flex: 0 0 1em;
		font-size: 6.8vmin;
		line-height: 1;
		color: white;
		transition: color 0.2s;

		.article-footer & {
			font-size: 1.25rem;

			{hover-focus-active} {
				color: $secondary;
			}

			@media $smWidth {
				font-size: 3vw;
			}
		}
		
		{hover-focus-active} {
			color: white;
			text-decoration: none;
		}
	}
	
	&__title {
		display: none;
	}
	
	&__title,
	&__badge {
		vertical-align: middle;
	}
	&__badge {
		background: transparent;
	}
	&__badge,
	&__icon,
	.icon {
		display: block;
		size(100%);
		box-sizing: border-box;
	}
	&__icon {
		padding: 0;
	}
	
}