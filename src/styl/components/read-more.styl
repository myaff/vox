.read-more {
  border-top 1px solid rgba($primary, 0.1);
  padding: 2.5rem 0;

  &__title {
    font: bold 30px/1 $font-util;
    color: $primary;
    text-transform: uppercase;
  }

  &__list {
    flexy(flex-start, flex-start);

    @media $smWidth {
      flex-wrap: wrap;
    }
  }

  &__item {
    flex: 0 0 calc((100% - 2.5rem) / 3);

    @media $smWidth {
      flex: 1 1 100%;
    }

    & + & {
      margin-left: 1.25rem;

      @media $smWidth {
        margin: 6.25vw 0 0;
      }
    }

    &-img {
      size(100%, 0);
      padding-bottom: 66.67%;
      overflow: hidden;
      margin-bottom: 1rem;

      img {
        size(100%, auto);
        absolute-center();
        transition: transform 0.5s;
        transform-origin: center;

        ^[0]__item-link:hover & {
          transform: scale(1.1) translate(-50%, -50%);
        }
      }
    }

    &-title {
      font: bold 1.25rem/1.3 $font-util;
      color: $secondary;
    }

    &-subtitle {
      font: 14px/1.5 $font-util;
      color: $primary;
    }

    &-title,
    &-subtitle {
      filter: grayscale(100%);
      transition: filter 0.3s;

      ^[0]__item-link:hover & {
        filter: grayscale(0);
      }
    }
  }
}