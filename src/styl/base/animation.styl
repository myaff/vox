.page-animate {
  absolute(0px, 0px);
  size(100%);
  overflow: hidden;
  z-index: -100;

  &__inner {
    padding-right: vw(90);
    padding-top: vw(115);

    @media $display-breakpoints.sm-and-down {
      padding-top: vw(100, 480);
      padding-right: 0;
    }
  }

  .is-animating & {
    z-index: 1;
  }

	&__item {
		width: 100%;
		margin: vw(90) 0;
    background: $black;
    transition-property: transform;
    transform: translateX(100%) translateZ(0);

    .animation-start & {
      transform: translateX(0) translateZ(0);
    }
    .animation-end & {
      transform: translateX(-100%) translateZ(0);
    }

		&:first-child,
		&:nth-child(2) {
			margin-top: 0;
		}
		&:last-child,
		&:nth-last-child(2) {
			margin-bottom: 0;
		}

		@media $display-breakpoints.md-and-up {
			&:nth-child(even) {
        display: none;
      }
      &:first-child,
      &:nth-child(6n + 1) {
        transition-duration: 1s;
      }

      &:nth-child(3),
      &:nth-child(6n + 3) {
        transition-duration: 1.5s;
      }

      &:nth-child(5),
      &:nth-child(6n + 5) {
        transition-duration: 2s;
      }
		}

		@media $display-breakpoints.sm-and-down {
      height: vw(160, 480);
			margin: 0;

      
      &:first-child,
      &:nth-child(3n + 1) {
        transition-duration: 1s;
      }

      &:nth-child(2),
      &:nth-child(3n + 2) {
        transition-duration: 1.5s;
      }

      &:nth-child(3),
      &:nth-child(3n + 3) {
        transition-duration: 2s;
      }
		}
	}
}

.page {
  transition: opacity 0.5s;
  .content-loaded & {
    opacity: 0;
  }
}