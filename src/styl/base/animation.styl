@keyframes updown {
  0 {
    transform: translateY(0%);
  }
  12.5% {
    transform: translateY(50%);
  }
  25% {
    transform: translateY(0%);
  }
  37.5% {
    transform: translateY(50%);
  }
  50% {
    transform: translateY(0%);
  }
  62.5% {
    transform: translateY(50%);
  }
  75% {
    transform: translateY(0%);
  }
  100% {
    transform: translateY(0%);
  }
}

@keyframes scalex {
  from {
    transform: scaleX(0);
  }
  to {
    transform: scaleX(1);
  }
}