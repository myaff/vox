.field {
  
  & + & {
    margin-top: 30px;
  }

  &__input {
    display: block;
    width: 100%;
    font: 300 24px/1 $font-base;
    height: 57px;
    padding: 16px 0;
    border: 0;
    border-bottom: 1px solid $black;
    box-sizing: border-box;
    box-shadow: none;
    background: transparent;

    {hover-focus-active} {
      outline: none;
    }

    textarea& {
      min-height: 57px;
      width: 100%;
      min-width: 100%;
      max-width: 100%;
    }
  }

  &__label {
    relative();
    display: block;
  }

  &__label-text {
    font: 600 24px/1.33 $font-base;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  &__placeholder {
    font: 300 24px/1 $font-base;
    padding: 16px 0;
    absolute(0px, 0px);
    color: $grey-light;
    cursor: text;
    transition: opacity 0.3s, transform 0.3s;

    ^[0]__input:focus ~ &,
    ^[0].has-focus &,
    ^[0].has-value & {
      opacity: 0;
      transform: translateX(20%);
    }
  }
}

.fieldset {
  min-height: 510px;
  border-bottom: 1px solid currentColor;
  margin-bottom: 70px;
}

.flow-textarea {
  overflow: hidden;
  resize: none;

  &-example {
    font: 300 24px/1 $font-base;
    padding: 16px 0;
    absolute(100%, 0px);
    width: 100%;
    z-index: -100;
    opacity: 0;
  }
  &-label {
    overflow: hidden;
  }
}