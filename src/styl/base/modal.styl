.modal {
  fixed(0px, 0px);
  size(100vw, 100%);
  z-index: 99;
  display: none;
  background: rgba($black, 0.5);
  overflow-y: auto;
  .layout & {
      width: 100vw;
  }

  &__window {
    width: 100%;
    max-width: 950px;
    background: $white;
    absolute(50%, 50%);
    transform: translate(-50%, -50%);
    max-height: 100vh;
    display: none;

    @media $smWidth {
      max-width: 100vw;
    }
    @media screen and (max-width: 1070px) {
      margin-top: 60px;
    }
  }

  &__close {
    absolute(-60px);
    right: -60px;
    z-index: 5;
    size(60px);
    padding: 20px;
    color: $white;
    cursor: pointer;

    @media screen and (max-width: 1070px) {
      right: 0;
      padding-right: 0;
      color: $primary;

      .modal--video & {
        color: $white;
      }
    }
  }

  &__inner {
    overflow-y: auto;
  }

  &__content {
    width: 100%;
    padding: 80px 80px 86px;
    @media $mobile {
      padding: (120*100/750)vw (50*100/750)vw (140*100/750)vw;
    }
    ^[0]--video & {
      padding: 0;

      .video {
        overflow: hidden;
      }
    }
  }
}